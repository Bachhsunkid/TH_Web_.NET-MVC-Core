@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using TH_Ogani_Test.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TDanhMucSp>


    <style>
    .product__pagination {
        margin: 0 auto;
    }

    .pagination{
        justify-content: center;
        margin-top: 30px;
    }

    .pagination li {
        margin: 0 4px;
        line-height: 30px;
        height: 30px;
        width: 30px;
        text-align: center;
        border: 1px solid #aaa;
    }

        .pagination li a {
            color: #333;
            
            text-decoration: none;
        }

        .pagination li.active {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 1px solid #b2b2b2;
            font-size: 14px;
            color: #fff;
            background-color: #7fad39;
            font-weight: 700;
            line-height: 28px;
            text-align: center;
            margin: 0 4px;
        }

</style>

<h1>ProductList</h1>

<p>
    <a asp-area="admin" asp-controller="HomeAdmin" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="table-success">
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Cân nặng
            </th>
            <th>
                Độ nổi
            </th>
            <th>
                Thời gian bảo hành
            </th>
            <th>
                Giá lớn nhất
            </th>
            <th>
                Ảnh đại diện
            </th>
            <th>
                Tính năng
            </th>
        </tr>
    </thead>
    <tbody>

    @{
        int i = 1;
    }
    @foreach (var item in Model) {
            i = i + 1;
            string cls = "table-primary";
            if(i%2==0){
                cls = "table-secondary";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanNang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoNoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
            <td>
                <img src="@Url.Content("../../Images/" + item.AnhDaiDien)">
            </td>
            
            <td>
                <a asp-controller="HomeAdmin" asp-action="UpdateProduct" asp-route-maSp="@item.MaSp">Edit</a> |
                <a  asp-route-id="@item.MaSp">Details</a> |
                <a asp-controller="HomeAdmin" asp-action="DeleteProduct" asp-route-maSp="@item.MaSp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("ProductList", new {page=page}))
</div>